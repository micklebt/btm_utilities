    },
    "handle_links": "preferred",
    "capture_links": "existing-client-navigate",
    "file_handlers": [
        {
            "action": "/util/",
            "accept": {
                "text/csv": [".csv"],
                "application/json": [".json"]
            }
        }
    ],
    "protocol_handlers": [
        {
            "protocol": "web+btm",
            "url": "/util/?action=%s"
        }
    ],
    "share_target": {
        "action": "/util/",
        "method": "POST",
        "enctype": "multipart/form-data",
        "params": {
            "title": "title",
            "text": "text",
            "url": "url"
